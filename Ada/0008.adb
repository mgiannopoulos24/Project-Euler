with Ada.Text_IO; use Ada.Text_IO;

procedure Max_Product is
   function Calculate_Product (Str : String; Start : Integer) return Long_Long_Integer is
      Product : Long_Long_Integer := 1;
   begin
      -- Ensure the start index and the range for 13 digits are valid
      if Start >= 1 and then Start + 12 <= Str'Length then
         for I in Start .. Start + 12 loop
            Product := Product * Long_Long_Integer (Character'Pos(Str(I)) - Character'Pos('0'));
         end loop;
      end if;
      return Product;
   end Calculate_Product;

   Number : constant String := 
     "";

   Length : constant Integer := Number'Length;
   Max_Product : Long_Long_Integer := 0;

begin
   -- Loop through each possible set of 13 adjacent digits
   for I in 1 .. Length - 12 loop
      declare
         Product : Long_Long_Integer := Calculate_Product(Number, I);
      begin
         if Product > Max_Product then
            Max_Product := Product;
         end if;
      end;
   end loop;

   -- Print the result
   Put_Line("The greatest product of thirteen adjacent digits is " & Long_Long_Integer'Image(Max_Product));
end Max_Product;
